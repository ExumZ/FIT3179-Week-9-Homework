{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Migration Flow of Countries (2021)",
  "width": 1000,
  "height": 750,
  "data": {
    "url": "https://raw.githubusercontent.com/ExumZ/FIT3179-Week-9-Homework/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.GU_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ExumZ/FIT3179-Week-9-Homework/main/data/migration_data_2021.csv"
            },
            "key": "country_code",
            "fields": ["value"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "value",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [-500000, 0, 500000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "value", "type": "quantitative"}
        ]
      }
    }
  ]
  
}