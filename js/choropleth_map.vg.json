{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Migration Flow by Year",
  "width": 1000,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "selectedYear",
      "value": "year",
      "bind": {"input": "range", "min": 1960, "max": 2021, "step": 1}
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/ExumZ/FIT3179-Week-9-Homework/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.GU_A3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ExumZ/FIT3179-Week-9-Homework/main/data/net_migration_by_country.csv"
        },
        "key": "country_code",
        "fields": ["value"]
      },
      "as": "migration_data"
    },
    {
      "filter": {
        "field": "migration_data.year",
        "equal": {"expr": "toString(datum.selectedYear)"}
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [-100000, -50000, 0, 50000, 100000],
        "domainMid": 0
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "value", "type": "quantitative"}
    ]
  }
}

